Codechef : Coins and Triangles 

import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
    public static void main (String[] args) throws java.lang.Exception
    {
        // your code goes here
        Scanner sc = new Scanner(System.in);

        int t = sc.nextInt(); 
        
        while (t-- > 0) {
            int a = sc.nextInt();
            int count = 0;
            int sum = a;
            int max = 0;

            while (max <= sum) {
                max = max + 1;
                if (sum >= max) {
                    count++;
                }
                sum = sum - max;
            }

            System.out.println(count);
        }
    }
}
