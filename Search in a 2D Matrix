CodeChef : Search in a 2D Matrix

import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef {
    public static void main (String[] args) throws java.lang.Exception {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt(); // number of rows
        int m = sc.nextInt(); // number of columns

        int[][] matrix = new int[n][m];

        // Read matrix elements
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                matrix[i][j] = sc.nextInt();
            }
        }

        int target = sc.nextInt(); // value to search

        boolean found = searchMatrix(matrix, n, m, target);
        System.out.println(found ? "YES" : "NO");
    }

    static boolean searchMatrix(int[][] matrix, int n, int m, int target) {
        int low = 0;
        int high = n * m - 1;

        while (low <= high) {
            int mid = low + (high - low) / 2;
            int midValue = matrix[mid / m][mid % m]; // map 1D index to 2D element

            if (midValue == target)
                return true;
            else if (midValue < target)
                low = mid + 1;
            else
                high = mid - 1;
        }

        return false;
    }
}
